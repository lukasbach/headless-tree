{
  "compilerOptions": {
    "outDir": "lib",
    "declaration": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "module": "ES2022",
    "target": "ES6",
    "moduleResolution": "Node",
    "jsx": "react",
    "skipLibCheck": true
  },
  "include": ["packages"],
  "exclude": ["src/**/template-*", "packages/docs"]
}
